@using Budgeteer.Clients.WebApplication.Shared.Components
@inherits LayoutComponentBase

<PageTitle>Budgeteer</PageTitle>

<MudThemeProvider Theme="_budgeteerTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<Sidepanel />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleDrawer())" />
        <MudText Typo="Typo.h5" Class="ml-3">Budgeteer</MudText>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <div class="mx-5 my-5">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

