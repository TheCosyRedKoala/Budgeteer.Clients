<MudItem xs="12" sm="6" md="4" lg="3">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    @Budget.Name
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardActions Class="d-flex justify-end">
            <MudMenu Label="Actions" EndIcon="@Icons.Material.Filled.MoreHoriz" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
                <MudMenuItem Icon="@Icons.Material.Filled.RemoveRedEye">
                    View
                </MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.Edit" OnClick="OpenBudgetUpdateForm">
                    Edit
                </MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.Delete" OnClick="OpenDeleteDialog">
                    Delete
                </MudMenuItem>
            </MudMenu>
        </MudCardActions>
    </MudCard>
</MudItem>
